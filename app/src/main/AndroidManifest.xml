<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bmicalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BMI Calculator"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Główna aktywność startowa -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Aktywności aplikacji -->
        <activity android:name=".MainActivity" />
        <activity android:name=".CalorieCalculatorActivity" />
        <activity android:name=".RecipeRecommendationActivity" />
        <activity android:name=".BmiChartActivity" />

    </application>

</manifest>
